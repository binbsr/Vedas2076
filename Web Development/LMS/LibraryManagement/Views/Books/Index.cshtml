@model List<Book>

<form class="d-flex" action="/books/index">
    <input class="form-control me-2" type="search" name="searchText" placeholder="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

@if (!Model.Any())
{
    <h1>No records found.</h1>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Publised Date</th>
            <th scope="col">Publiser</th>
            <th scope="col">Edition</th>
            <th scope="col">Price</th>
            <th scope="col">Language</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>        
        @{
            int i = 1;
        }
        @foreach (var book in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedDate</td>
                <td>@book.Publisher</td>
                <td>@book.Edition</td>
                <td>@book.Price</td>
                <td>@book.Language</td>
                <td>
                    <a href="/books/edit?id=@book.Id"><i class="bi bi-pen text-warning"></i></a>
                    <a href="/books/delete?id=@book.Id"><i class="bi bi-trash text-danger"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
